# Production Environment Variables
# IMPORTANT: Copy this to .env.production and fill in real values
# NEVER commit .env.production to git

# PostgreSQL Database (Production)
POSTGRES_USER=raven_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=raven_shop_production

# Database URL (matches postgres service in docker-compose.prod.yml)
DATABASE_URL=postgresql://raven_user:CHANGE_THIS_TO_STRONG_PASSWORD@postgres:5432/raven_shop_production

# CORS Origins (comma-separated, update with your production domains)
CORS_ORIGINS=http://localhost,http://yourdomain.com,https://yourdomain.com

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_CREDENTIALS_PATH=/app/credentials/google-sheets-credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Application Settings
PYTHON_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Security (Generate strong random keys)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-a-strong-random-key-here
JWT_SECRET=another-strong-random-key-here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost
API_BASE_URL=http://localhost/api
