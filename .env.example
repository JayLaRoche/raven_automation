# ============================================================================
# RAVEN SHOP AUTOMATION - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - it contains secrets!
# ============================================================================

# APPLICATION ENVIRONMENT
# Options: development, staging, production
APP_ENV=development
NODE_ENV=development

# ============================================================================
# BACKEND CONFIGURATION (FastAPI/Python)
# ============================================================================

# Database Configuration - Switch between dev and production databases
# Development: Local PostgreSQL or SQLite
# Production: Remote PostgreSQL (Azure Database, AWS RDS, etc.)

DB_PROVIDER=postgresql  # Options: postgresql, sqlite
DB_USER=raven_user
DB_PASSWORD=your_secure_password_here
DB_NAME=raven_drawings
DB_HOST=localhost
DB_PORT=5432

# Full Database URL (overrides individual DB settings if provided)
# Development: postgresql://raven_user:password@localhost:5432/raven_drawings
# Production: postgresql://raven_user:password@prod-db.database.windows.net:5432/raven_drawings
DATABASE_URL=

# SQLite fallback (for development without PostgreSQL)
SQLITE_DB_PATH=./data/raven_drawings.db

# Backend Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true  # Hot reload in development

# FastAPI Debug Mode
DEBUG=true  # Set to false in production

# ============================================================================
# FRONTEND CONFIGURATION (React/Vite)
# ============================================================================

# API Server URL
# Development: http://localhost:8000
# Production: https://api.ravencustomglass.com
VITE_API_URL=http://localhost:8000

# Frontend Server Configuration
VITE_PORT=3000

# Analytics and Monitoring (optional)
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=

# ============================================================================
# GOOGLE SHEETS INTEGRATION
# ============================================================================

# Path to Google Sheets service account credentials JSON file
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_SHEETS_CREDENTIALS_PATH=/path/to/service-account-key.json

# Google Sheet ID to sync frame data from
# Extract from: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Frame sync interval (minutes)
FRAME_SYNC_INTERVAL=60

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Development: Allow localhost origins
# Production: Set to your actual domain
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# SECURITY & AUTHENTICATION (Future use)
# ============================================================================

# JWT Secret for token signing
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production

# JWT Expiration time (minutes)
JWT_EXPIRATION_MINUTES=1440

# ============================================================================
# FILE UPLOADS & STORAGE
# ============================================================================

# Maximum file upload size (MB)
MAX_UPLOAD_SIZE_MB=50

# Static files directory for frame images
STATIC_FILES_DIR=./static

# PDF output directory
PDF_OUTPUT_DIR=./outputs

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/app.log

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================

# Enable/disable features
FEATURE_PDF_EXPORT=true
FEATURE_GOOGLE_SHEETS_SYNC=true
FEATURE_FRAME_LIBRARY=true
